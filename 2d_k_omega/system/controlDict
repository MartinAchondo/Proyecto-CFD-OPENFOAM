FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale_factor  1249.9999999999986;

pointWallLaw  0.95;


application     simpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1000;

deltaT          1;

writeControl    timeStep;

writeInterval   $endTime;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;


functions
  {
    #includeFunc  residuals;

    cf
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      field   wallShearStress;
      scale   $scale_factor;
      result  cf;
    }

    cp
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      field   p;
      scale   $scale_factor;
      result  cp;
    }

    wallShearStress
    {
        type            wallShearStress;
        functionObjectLibs ("libfieldFunctionObjects.so");
        writeControl    writeTime;
    }

    yPlus
    {
        type            yPlus;
        functionObjectLibs ("libfieldFunctionObjects.so");
        writeControl    writeTime;
    }

    vorticity
    {
        type            vorticity;
        libs            ("libfieldFunctionObjects.so");
        writeControl    writeTime;
    }

  
  wallLaw  
  {
    type sets;
    functionObjectLibs ( "libsampling.so" );
    interpolationScheme cell;
    writeControl    timeStep;
    writeInterval   $endTime;
    setFormat raw;
    fields (U); 
    sets
    (
      X1 // line name
    {
        type lineUniform;
        axis distance;
        start           ($pointWallLaw 0.1 0);
        end             ($pointWallLaw 0.2 0);
        nPoints         50;
      }
    );
  }

  shearStressWall  
  {
    type sets;
    functionObjectLibs ( "libsampling.so" );
    interpolationScheme cellPoint;
    writeControl    timeStep;
    writeInterval   $endTime;
    setFormat raw;
    fields (wallShearStress);
    patches ("fixedWalls");
    sets
    (
      X1 // line name
    {
        type lineUniform;
        axis distance;
        start           ($pointWallLaw 0.1 0);
        end             (1 0.1 0);
        nPoints         1;
      }
    );
  }

  
  // probes
  // {
  // // Where to load it from
  //         functionObjectLibs ( "libsampling.so" );

  //         type        probes;
  //         writeControl    timeStep;
  //         writeInterval   100;

  //         // Name of the directory for probe data
  //         name        probes;
  //         probeLocations
  //         (
  //           (1.5 0 0.01)
  //         );

  //         // Fields to be probed
  //         fields ( wallShearStress );

  // }

}

