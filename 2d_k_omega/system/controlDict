FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale_factor  1249.9999999999986;

pointWallLaw1  0.95;
pointWallLaw2  1.4;


application     simpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1000;

deltaT          1;

writeControl    timeStep;

writeInterval   $endTime;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;


functions
  {
    #includeFunc  residuals;

    cf
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      field   wallShearStress;
      scale   $scale_factor;
      result  cf;
    }

    cp
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      field   p;
      scale   $scale_factor;
      result  cp;
    }

    nuTurb
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      field   nut;
      scale   1.0;
      result  nuTurb;
      offSet  -1e-06;
    }


    wallShearStress
    {
        type            wallShearStress;
        functionObjectLibs ("libfieldFunctionObjects.so");
        writeControl    writeTime;
    }

    yPlus
    {
        type            yPlus;
        functionObjectLibs ("libfieldFunctionObjects.so");
        writeControl    writeTime;
    }

    vorticity
    {
        type            vorticity;
        libs            ("libfieldFunctionObjects.so");
        writeControl    writeTime;
    }

    #include "samples"

}

// ************************************************************************* //
