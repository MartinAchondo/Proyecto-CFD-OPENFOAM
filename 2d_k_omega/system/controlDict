FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include    "$FOAM_CASE/constant/initialConditions"

application     simpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         100;

deltaT          1;

writeControl    timeStep;

writeInterval   $endTime;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;


functions
  {
    #includeFunc  residuals;

    //#includeFunc streamlines;

    wallShearStress
    {
        type            wallShearStress;
        functionObjectLibs ("libfieldFunctionObjects.so");
        writeControl    writeTime;
        timeStart       $endTime;
    }

    yPlus
    {
        type            yPlus;
        functionObjectLibs ("libfieldFunctionObjects.so");
        writeControl    writeTime;
        timeStart       $endTime;
    }

    vorticity
    {
        type            vorticity;
        libs            ("libfieldFunctionObjects.so");
        writeControl    writeTime;
        timeStart       $endTime;
    }

    cf
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      timeStart       $endTime;
      field   wallShearStress;
      scale   $factor_adim;
      result  cf;
    }

    cp
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      timeStart       $endTime;
      field   p;
      scale   $factor_adim;
      result  cp;
    }

    nuTurb
    {
      type    scale;
      libs    ("libfieldFunctionObjects.so");
      writeControl    writeTime;
      timeStart       $endTime;
      field   nut;
      scale   1.0;
      result  nuTurb;
      offSet  -1e-06;
    }


    #include "samples"

}

// ************************************************************************* //
