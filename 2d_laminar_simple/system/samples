pointWallLaw1  0.95;
pointWallLaw2  1.4;

cf_cp_surface
{
    type sets;
    functionObjectLibs ( "libsampling.so" );
    interpolationScheme cellPoint;
    writeControl    onEnd;
    setFormat raw;
    fields (cf cp);
    patches ("fixedWalls"); 
    sets
    (
    lower_1
        {
            type lineUniform;
            axis x;
            start           (0 0.1 0);
            end             (1 0.1 0);
            nPoints         50;
        }
    lower_2
        {
            type lineUniform;
            axis x;
            start           (1 0 0);
            end             (2 0 0);
            nPoints         50;
        }
    upper
        {
            type lineUniform;
            axis distance;
            start           (0 0.2 0);
            end             (2 0.2 0);
            nPoints         50;
        }
    );
}



